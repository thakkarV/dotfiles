{
    "description": "iTerm2: Remap shortcuts to use ctrl->cmd",
    "manipulators": [
        {
            "conditions": [
                {
                    "bundle_identifiers": [
                        "com.googlecode.iterm2"
                    ],
                    "type": "frontmost_application_if"
                }
            ],
            "from": {
                "key_code": "c",
                "modifiers": {
                    "mandatory": ["left_command"],
                    "optional": ["any"]
                }
            },
            "to": [
                {
                    "key_code": "c",
                    "modifiers": ["left_control"]
                }
            ],
            "type": "basic"
        },
        {
